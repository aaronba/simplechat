# Environment Configuration for FastMCP OAuth Server

# Microsoft Entra ID Configuration (Required)
AZURE_CLIENT_ID=your_application_client_id_here
AZURE_TENANT_ID=your_tenant_id_here

# OAuth Configuration
REDIRECT_URI=http://localhost:8000/auth/callback

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000

# Backend API Configuration (Optional)
BACKEND_API_BASE_URL=https://your-backend-api.com/api

# Custom API Scope (Optional)
# CUSTOM_API_SCOPE=api://your-app-id/access

# Token Cache Configuration
TOKEN_CACHE_FILE=token_cache.json
