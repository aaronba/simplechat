# SimpleChat MCP Client Configuration

# MCP Server Connection
# Path to the SimpleChat MCP server script
SIMPLECHAT_MCP_CLIENT_SERVER_PATH=../mcp_server/simplechat_mcp_server.py

# Connection timeout in seconds
SIMPLECHAT_MCP_CLIENT_TIMEOUT=30

# Logging level (DEBUG, INFO, WARNING, ERROR)
SIMPLECHAT_MCP_CLIENT_LOG_LEVEL=INFO

# SimpleChat API Configuration (passed to MCP server)
# Base URL of your SimpleChat instance
SIMPLECHAT_MCP_SIMPLECHAT_BASE_URL=https://your-simplechat-instance.com

# Bearer token for authentication
SIMPLECHAT_MCP_SIMPLECHAT_BEARER_TOKEN=your-bearer-token-here

# Optional: Alternative server configurations
# SIMPLECHAT_MCP_CLIENT_SERVER_COMMAND=python
# SIMPLECHAT_MCP_CLIENT_SERVER_ARGS=["../mcp_server/simplechat_mcp_server.py"]