# Azure Container Apps Environment Variables
# Copy this file and update with your actual values

# Required: SimpleChat instance configuration
SIMPLECHAT_MCP_SIMPLECHAT_BASE_URL=https://your-simplechat-instance.com
SIMPLECHAT_MCP_SIMPLECHAT_BEARER_TOKEN=your-bearer-token-here

# Optional: Logging configuration
SIMPLECHAT_MCP_LOG_LEVEL=INFO

# Optional: Health check port (default: 8080)
SIMPLECHAT_MCP_HEALTH_PORT=8080

# Azure deployment configuration (for scripts)
DOCKER_REGISTRY=youracr.azurecr.io
IMAGE_NAME=simplechat-mcp-server
TAG=latest
RESOURCE_GROUP_NAME=simplechat-mcp-rg
CONTAINER_APP_NAME=simplechat-mcp-server
LOCATION=eastus