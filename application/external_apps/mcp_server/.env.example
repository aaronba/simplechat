# Example .env file for SimpleChat MCP Server
# Copy this to .env in the mcp_server directory and update with your values

# Required: Base URL of your SimpleChat instance
SIMPLECHAT_MCP_SIMPLECHAT_BASE_URL=https://your-simplechat-domain.com

# Required: Bearer token for authentication (must have ExternalApi role)
SIMPLECHAT_MCP_SIMPLECHAT_BEARER_TOKEN=your-bearer-token-here

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
SIMPLECHAT_MCP_LOG_LEVEL=INFO

# Optional: Server identification
SIMPLECHAT_MCP_SERVER_NAME=simplechat-mcp
SIMPLECHAT_MCP_SERVER_VERSION=1.0.0